{
    "name": "dmkulyk/nova-validation-toast",
    "description": "Enhanced validation toast messages for Laravel Nova with deduplication and improved error handling",
    "keywords": [
        "laravel",
        "nova",
        "validation",
        "toast",
        "error-handling"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmytro Kulyk",
            "email": "dmytro1kulyk@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/nova": "^4.0|^5.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Dmkulyk\\NovaValidationToast\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dmkulyk\\NovaValidationToast\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dmkulyk\\NovaValidationToast\\NovaValidationToastServiceProvider"
            ]
        }
    }
}